#!/bin/bash

# Operating system
cygwin=false;
darwin=false;
linux=false;
mingw=false;
case "`uname`" in
    CYGWIN*)
      cygwin=true
      ;;
    MINGW*)
      mingw=true
      ;;
    Darwin*)
      darwin=true
      ;;
    Linux*)
      linux=true
      ;;
esac

FAN_HOME=$(dirname $(cd `dirname $0`; pwd))

mkdir $FAN_HOME/../runtime/fni/$1/

if $darwin; then
  EXE=$FAN_HOME/bin/macos-arm64/fni
elif $cygwin || $mingw; then
  EXE=$FAN_HOME/bin/win-x86_64-debug/fni.exe
fi

$EXE -p$FAN_HOME -g$FAN_HOME/../runtime/fni/$1/ $1